<!DOCTYPE html>
<html {% block AngularApp %} data-ng-app="main" {% endblock %}>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href='http://fonts.googleapis.com/css?family=Oswald:400,300' rel='stylesheet' type='text/css' />
            <link href='http://fonts.googleapis.com/css?family=Abel|Satisfy' rel='stylesheet' type='text/css' />
            <link href='http://fonts.googleapis.com/css?family=Great+Vibes' rel='stylesheet' type='text/css'>
            <link href="{{ asset('bower_components/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" media="screen"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body {% block AngularCtrl %} data-ng-controller="MainCtrl" {% endblock %}>

        <div class="header-image"></div>

        <div class="container">
            {% block header %}{% endblock %}

            {% block content %}{% endblock %}
        </div>

        {% block footer %}{% endblock %}

        {% block javascripts %}

            <script src="{{ asset("/bower_components/jquery/dist/jquery.min.js") }}" type="text/javascript"></script>
            <script src="{{ asset("/bower_components/angular/angular.min.js") }}" type="text/javascript"></script>
            <script src="{{ asset("/bower_components/angular-resource/angular-resource.min.js") }}" type="text/javascript"></script>

        {% endblock %}
    </body>
</html>
