{% extends 'AppBundle::layout.html.twig' %}


{% block header %}
    {{ parent() }}

    <div id="banner">
        <div class="content"><img src="{{ asset('bundles/app/pictures/main.jpg') }}" width="1000" height="500" alt="" /></div>
    </div>

{% endblock %}

{% block content %}
        {%  set counter = 1 %}
        {% for product in pagination %}
            {% if counter == 1 %}
                <div id="featured-content">
            {% endif %}

                <div id="column{{ counter }}">
                    <h2>{{ product.name }}</h2>
                    {% thumbnail product.media, 'medium' with {'width': '300'} %}
                    {#<p><img src="images/img06.jpg" width="300" height="150" alt="" /></p>#}
                    <p>{{ product.description }}</p>
                    <p class="button"><a href="#">Read More</a></p>
                </div>

            {% if counter == 3 %}
                    </div>
                    {% set counter = 1 %}
                {% else %}
                    {% set counter = counter + 1 %}
                {% endif %}
        {% endfor %}

        {% if counter != 1 %}
            </div>
        {% endif %}

        {#<div id="column2">#}
            {#<h2>Fusce fringilla</h2>#}
            {#<p><img src="images/img07.jpg" width="300" height="150" alt="" /></p>#}
            {#<p>Etiam non felis. Donec ut ante. In id eros. Suspendisse lacus turpis, cursus egestas at sem. Mauris quam enim, molestie.</p>#}
            {#<p class="button"><a href="#">Read More</a></p>#}
        {#</div>#}

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>


{% endblock %}

